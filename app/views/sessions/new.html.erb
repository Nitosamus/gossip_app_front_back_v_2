<h1>Creer une nouvelle session</h1>
<%=form_for @users do |f|%>
<div class="form-group">
<label>Email</label><br>
<%=f.text_field :email, class: "form-control", size: "40 * 30", class:"btn btn-outline-info" %>
</div>
<div class="form-group">
<label>Password</label><br>
<%=f.text_field :password, class: "form-control", size: "40 * 30", class:"btn btn-outline-info" %>
</div>
</div>
<button type="submit" class="btn btn-success">ENVOYER</button> 
<%end%>
</div>